ALTER PROCEDURE [dbo].[INGRESAR_NUEVO_ESTUDIANTE#GRUPOB]
	-- Add the parameters for the stored procedure here
	
@CI varchar(50),
@Nombre varchar(50),
@Direccion varchar(50),
